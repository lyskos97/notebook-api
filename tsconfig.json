{
  "compilerOptions": {
    "target": "es5",
    "outDir": "dist",
    "moduleResolution": "node",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "lib": ["es2015"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
